@page
@model FinalProject.Areas.Identity.Pages.Account.ComposeEmailModel

@{
    ViewData["Title"] = "Compose Email";
}

<h3>@ViewData["Title"]</h3>

<style>
    body {
        background-image: url('/images/background.jpg'); /* เปลี่ยนเส้นทางให้ตรงกับที่เก็บไฟล์ */
        background-size: cover; /* ทำให้ภาพครอบคลุมทั้งหน้าจอ */
        background-position: center center; /* จัดตำแหน่งภาพกลาง */
        background-repeat: no-repeat; /* ไม่ให้ภาพซ้ำ */
        color: white; /* เปลี่ยนสีข้อความให้เด่นขึ้นเมื่อใช้พื้นหลังเข้ม */ /* Change this to any color */
    }
    .form-row {
        padding-bottom: 20px; /* Adds space between rows */
    }

    /* Adjust input field margin */
    .form-floating input {
        margin-bottom: 15px; /* Adjust the spacing between input fields and validation text */
        margin-right: 30px;
        margin-left: 20px;
    }
</style>

<form id="compose-email" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <table>
        <tr>
            <td>To</td>
            <td>
                <div class="form-floating">
                    <input asp-for="To" class="form" aria-required="true" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Subject</td>
            <td>
                <div class="form-floating">
                    <input asp-for="Subject" class="form" aria-required="true" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>Body</td>
            <td>
                <div class="form-floating" >
                    <textarea asp-for="Body" class="form" aria-required="true" style="height: 200px;width: 300px;max-height: 500px;max-width: 500px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;white-space: pre-wrap; word-wrap: break-word;"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button id="send-email" type="submit" class="btn btn-primary">Send</button>
            </td>
        </tr>
    </table>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}