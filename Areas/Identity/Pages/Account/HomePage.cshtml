@page
@model FinalProject.Areas.Identity.Pages.Account.HomePageModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <style>
        .highlight-uni {
            color: white; /* Red for "UNI" */
        }

        .highlight-sync {
            color: #4287f5; /* Blue for "SYNC" */
        }

        body {
            background-image: url('/images/background.jpg'); /* เปลี่ยนเส้นทางให้ตรงกับที่เก็บไฟล์ */
            background-size: cover; /* ทำให้ภาพครอบคลุมทั้งหน้าจอ */
            background-position: center center; /* จัดตำแหน่งภาพกลาง */
            background-repeat: no-repeat; /* ไม่ให้ภาพซ้ำ */
            color: white; /* เปลี่ยนสีข้อความให้เด่นขึ้นเมื่อใช้พื้นหลังเข้ม */ /* Change this to any color */
 
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 20px; /* Add space below the <h2> tag */
        }

        h1 {
            margin-top: 20px;
            margin-bottom: 20px; /* Add space below the <h2> tag */
            margin-right: 50px;
            font-size: 50px;
        }

        p {
            width: 400px;
            max-height: 400px;
            overflow-y: auto;
            padding: 10px;
            margin-top: 20px; /* Add space above the <p> tag */
            margin-bottom: 20px;
            font-size: 25px;

        }

        .custom-btn {
            padding: 20px 60px; /* Increase button size */
            font-size: 25px; /* Increase text size */
            margin-top: 20px; /* Add space above the <p> tag */
            margin-bottom: 20px;
            background-color: #d220e6;
            border: none;
            color: white;
        }

         
    </style>
</head>
<body>
    <h2>PIXELBYTE CO.</h2>
    <h1><span class="highlight-uni">UNI</span><span class="highlight-sync">SYNC</span></h1>
    <p>consolidates everything you need into one platform, streamlining tasks, communication, and resources. Effortlessly sync your work to focus on what matters, collaborate effectively, and achieve success in your professional life.</p>
    <a class="btn btn-info btn-lg custom-btn" href="/Identity/Account/Login">START!</a>

</body>
</html>